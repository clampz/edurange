<h2>Forgot your password?</h2>
<p>We'll send password reset instructions.</p>
%hr/
= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :class => 'form-horizontal', :method => :post, :role => 'form'}) do |f|
  = devise_error_messages!
  %div.form-group
    = f.label :email, class: 'control-label col-md-3'
    %div.col-md-9
      = f.email_field :email, :autofocus => true, class: 'form-control'
  %div.form-group
    %div.col-md-9.col-md-offset-3
      = f.submit 'Reset Password', :class => 'btn btn-warning'
= link_to 'back', :back
