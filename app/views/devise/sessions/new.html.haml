%h2
  Sign in
  %small
    or
    = link_to 'create an account', new_user_registration_path
%hr/
-#= form_tag session_path(:user), class: 'form-horizontal' do
= form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => { :class => 'form-horizontal', :role => 'form'}) do |f|
  %div.form-group
    = f.label :email, class: 'col-md-3 control-label'
    %div.col-md-9
      = f.email_field :email, :autofocus => true, class: 'form-control'
  %div.form-group
    = f.label :password, class: 'col-md-3 control-label'
    %div.col-md-9
      = f.password_field :password, class: 'form-control'
  %div.form-group
    %div.col-md-9.col-md-offset-3
      %div.checkbox
        %label
          = check_box_tag 'user[remember_me]', nil, class: 'form-control'
          Remember me
  %div.form-group
    %div.col-md-9.col-md-offset-3
      = f.submit "Sign In", class: 'btn btn-primary'
      %p
        = link_to 'Forgot your password?', new_user_password_path
