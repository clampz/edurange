<% if @subnet.errors.any? %>
  <% if @subnet.errors[:name].any? %>
    $('#modal-subnet-modify').find('#name-div').addClass('has-error');
    $('#modal-subnet-modify').find('#name-help').text('<%= @subnet.errors[:name][0] %>');
  <% else %>
    $('#modal-subnet-modify').find('#name-div').removeClass('has-error');
    $('#modal-subnet-modify').find('#name-help').text('');
  <% end %>
  <% if @subnet.errors[:cidr_block].any? %>
    $('#modal-subnet-modify').find('#cidr-div').addClass('has-error');
    $('#modal-subnet-modify').find('#cidr-help').text('<%= @subnet.errors[:cidr_block][0] %>');
  <% else %>
    $('#modal-subnet-modify').find('#cidr-div').removeClass('has-error');
    $('#modal-subnet-modify').find('#cidr-help').text('');
  <% end %>
  <% if @subnet.errors[:internet_accessible].any? %>
    $('#modal-subnet-modify').find('#internet-accessible-div').addClass('has-error');
    $('#modal-subnet-modify').find('#internet-accessible-help').text('<%= @subnet.errors[:internet_accessible][0] %>');
  <% else %>
    $('#modal-subnet-modify').find('#internet-accessible-div').removeClass('has-error');
    $('#modal-subnet-modify').find('#internet-accessible-help').text('');
  <% end %>
  <% if @subnet.errors[:running].any? %>
    $('#modal-subnet-modify').find('#help-div').addClass('has-error');
    $('#modal-subnet-modify').find('#help-help').text('<%= @subnet.errors[:running][0] %>');
  <% else %>
    $('#modal-subnet-modify').find('#help-div').removeClass('has-error');
    $('#modal-subnet-modify').find('#help-help').text('');
  <% end %>
<% else %>
  $('#subnet-<%= @subnet.id %>-name').text('<%= @subnet.name %>');
  $('#subnet-<%= @subnet.id %>-cidr').text('<%= @subnet.cidr_block %>');
  $('#subnet-<%= @subnet.id %>-internet-accessible').text('<%= @subnet.internet_accessible %>');
  $('#modal-subnet-modify').modal('toggle');
  $('#save-button-li').attr('class', '');
  $('#save-button').attr('href', '/scenarios/<%= @subnet.scenario.id %>/save');
  update_flash("Modified subnet '<%= @subnet.name %>'.");
<% end %>