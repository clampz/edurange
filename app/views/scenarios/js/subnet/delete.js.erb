$('#subnet-<%= @subnet.id.to_s %>-dropdown').removeClass("open");
<% if @subnet.errors.any? %>
  <% if @subnet.errors[:dependents].any? %>
    alert('<%= @subnet.errors[:dependents][0] %>')
  <% end %>
  <% if @subnet.errors[:running].any? %>
    alert('<%= @subnet.errors[:running][0] %>')
  <% end %>
<% else %>
  $('#subnet-<%= @subnet.id.to_s %>').remove();
  $('#save-button-li').attr('class', '');
  $('#save-button').attr('href', '/scenarios/<%= @subnet.scenario.id %>/save');
  update_flash("Removed subnet '<%= @subnet.name %>' from cloud '<%= @subnet.cloud.name %>'.");
<% end %>