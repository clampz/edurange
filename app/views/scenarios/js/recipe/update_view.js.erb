<% if @error %>
	alert("<%= @error %>")
<% else %>
	$('#modal-recipe-update').modal('show');
	$('#modal-recipe-update').find('#title').html('Recipe: <%= @recipe.name %>');
	$('#modal-recipe-update').find('#text').val("<%= @recipe_text %>");
	$('#modal-recipe-update').find('#recipe_id').val("<%= @recipe.id %>");
	$('#modal-recipe-update').find('#text').height( 0 );
	$('#modal-recipe-update').find('#text').height( $('#modal-recipe-update').find('#text')[0].scrollHeight );
<% end %>