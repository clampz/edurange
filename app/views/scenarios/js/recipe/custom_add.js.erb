<% if @recipe.errors.any? %>
  <% if @recipe.errors[:name].any? %>
    $('#modal-recipe-custom-add').find('#name-div').addClass('has-error');
    $('#modal-recipe-custom-add').find('#name-help').text('<%= @recipe.errors[:name][0] %>');
  <% end %>
  <% if @recipe.errors[:global].any? %>
    $('#modal-recipe-custom-add').find('#helper-div').addClass('has-error');
    $('#modal-recipe-custom-add').find('#helper').text('<%= @recipe.errors[:global][0] %>');
  <% end %>
<% else %>
  $('#modal-recipe-custom-add').modal('hide')
  $('#recipes').append("<li id='recipes-<%= @recipe.id %>'><%= @recipe.name %> <a href='/scenarios/<%= @recipe.scenario.id %>/recipe_view?recipe_id=<%= @recipe.id %>' data-method='post' rel='nofollow' data-remote='true'>view</a> <a href='/scenarios/<%= @recipe.scenario.id %>/recipe_update_view?recipe_id=<%= @recipe.id %>' data-method='post' rel='nofollow' data-remote='true'>update</a> <a href='/scenarios/<%= @recipe.scenario.id %>/recipe_remove?recipe_id=<%= @recipe.id %>' data-method='post' rel='nofollow' data-remote='true'>remove</a></li>")
  $('#save-button-li').attr('class', '');
  $('#save-button').attr('href', '/scenarios/<%= @recipe.scenario.id %>/save');
  update_flash("Added recipe '<%= @recipe.name %>' to scenario.");
<% end %>
