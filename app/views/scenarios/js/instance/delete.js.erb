$('#<%= "instance-#{@instance.id}" %>-dropdown').removeClass('open');
<% if @instance.errors.any? %>
	<% if @instance.errors[:running].any? %>
    alert('<%= @instance.errors[:running][0] %>')
  <% end %>
<% else %>
  $('#<%= "instance-#{@instance.id}" %>').remove();
  $('#save-button-li').attr('class', '');
  $('#save-button').attr('href', '/scenarios/<%= @instance.scenario.id %>/save');
  update_flash("Removed instance '<%= @instance.name %>' from subnet '<%= @instance.subnet.name %>'.");
<% end %>