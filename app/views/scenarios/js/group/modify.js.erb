<% if @group.errors.any? %>
  <% if @group.errors[:name].any? %>
    $('#modal-group-modify').find('#name-div').addClass('has-error');
    $('#modal-group-modify').find('#name-help').text('<%= @group.errors[:name][0] %>');
  <% end %>
  <% if @group.errors[:running].any? %>
    $('#modal-group-modify').find('#help-div').addClass('has-error');
    $('#modal-group-modify').find('#help-help').text('<%= @group.errors[:running][0] %>');
  <% else %>
    $('#modal-group-modify').find('#help-div').removeClass('has-error');
    $('#modal-group-modify').find('#help-help').text('');
  <% end %>
<% else %>
  $('#group-<%= @group.id %>-name').html('<%= @group.name %>');
  $('#modal-group-modify').modal('toggle');
  $('#save-button-li').removeClass('disabled');
  $('#save-button').attr('href', '/scenarios/<%= @group.scenario.id %>/save');
	update_flash("Modified group '<%= @group.name %>'.");
<% end %>