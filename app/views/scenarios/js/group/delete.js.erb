$('#group-<%= @group.id %>-dropdown').removeClass('open');
<% if @group.errors.any? %>
  <% if @group.errors[:running].any? %>
    alert("<%= @group.errors[:running][0] %>")
  <% end %>
<% else %>
	$('#group-<%= @group.id %>').remove();
	$('#save-button-li').removeClass('disabled');
	$('#save-button').attr('href', '/scenarios/<%= @group.scenario.id %>/save');
	update_flash("Removed group '<%= @group.name %>' from scenario.");
<% end %>