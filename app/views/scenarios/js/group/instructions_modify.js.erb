<% if @group.errors.any? %>
	alert('error updating instructions contact administrator.')
<% else %>
	$('#save-button-li').attr('class', '');
	$('#save-button').attr('href', '/scenarios/<%= @scenario.id %>/save');
	$('#modal-group-instructions-modify').modal('hide');
	$('#group-<%= @group.id %>-instructions').text('<%= escape_javascript(@group.instructions.html_safe) %>');
<% end %>