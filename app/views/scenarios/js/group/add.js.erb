<% if @group.errors.any? %>
  <% if @group.errors[:name].any? %>
    $('#modal-group-add').find('#name-div').addClass('has-error');
    $('#modal-group-add').find('#name-help').text('<%= @group.errors[:name][0] %>');
  <% end %>
<% else %>
  $('#modal-group-add').modal('toggle');
  $('#groups').append("<%= escape_javascript( render('/scenarios/show/group', group: @group).delete("\n") ).html_safe %>");
  $('#save-button-li').removeClass('disabled');
  $('#save-button').attr('href', '/scenarios/<%= @group.scenario.id %>/save');
  update_flash("Added group '<%= @group.name %>' to scenario.");
<% end %>