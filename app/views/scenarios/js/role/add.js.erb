<% if @role.errors.any? %>
  <% if @role.errors[:name].any? %>
    $('#modal-role-add').find('#name-div').addClass('has-error');
    $('#modal-role-add').find('#name-help').text('<%= @role.errors[:name][0] %>');
  <% end %>
<% else %>
  $('#roles').append("<%= escape_javascript( render('/scenarios/show/role', role: @role).delete("\n") ).html_safe %>");
  $('#modal-role-add').modal('toggle');
  $('#save-button-li').attr('class', '');
  $('#save-button').attr('href', '/scenarios/<%= @role.scenario.id %>/save');
  update_flash("Added role '<%= @role.name %>' to scenario.");
<% end %>