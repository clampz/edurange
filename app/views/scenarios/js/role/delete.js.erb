$('#role-<%= @role.id %>-dropdown').removeClass('open');
<% if @role.errors.any? %>
  <% if @role.errors[:running].any? %>
    alert('<%= @role.errors[:running][0] %>');
  <% end %>
<% else %>
	<% @instance_role_ids.each do |instance_role_id| %>
		$('#instance-role-<%= instance_role_id %>').remove();
	<% end %>
	$('#role-<%= @role.id %>').remove();
	$('#save-button-li').attr('class', '');
	$('#save-button').attr('href', '/scenarios/<%= @role.scenario.id %>/save');
	update_flash("Removed role '<%= @role.name %>' from scenario.");
<% end %>