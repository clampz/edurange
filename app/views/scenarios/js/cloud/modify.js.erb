<% if @cloud.errors.any? %>
  <% if @cloud.errors[:name].any? %>
    $('#modal-cloud-modify').find('#name-div').addClass('has-error');
    $('#modal-cloud-modify').find('#name-help').text('<%= @cloud.errors[:name][0] %>');
  <% else %>
    $('#modal-cloud-modify').find('#name-div').removeClass('has-error');
    $('#modal-cloud-modify').find('#name-help').text('');
  <% end %>
  <% if @cloud.errors[:cidr_block].any? %>
    $('#modal-cloud-modify').find('#cidr-div').addClass('has-error');
    $('#modal-cloud-modify').find('#cidr-help').text('<%= @cloud.errors[:cidr_block][0] %>');
  <% else %>
    $('#modal-cloud-modify').find('#cidr-div').removeClass('has-error');
    $('#modal-cloud-modify').find('#cidr-help').text('');
  <% end %>
  <% if @cloud.errors[:running].any? %>
    $('#modal-cloud-modify').find('#help-div').addClass('has-error');
    $('#modal-cloud-modify').find('#help-help').text('<%= @cloud.errors[:running][0] %>');
  <% else %>
    $('#modal-cloud-modify').find('#help-div').removeClass('has-error');
    $('#modal-cloud-modify').find('#help-help').text('');
  <% end %>
<% else %>
  $('#save-button-li').removeClass('disabled');
  $('#cloud-<%= @cloud.id %>-name').text('<%= @cloud.name %>');
  $('#cloud-<%= @cloud.id %>-cidr').text('<%= @cloud.cidr_block %>');
  $('#modal-cloud-modify').modal('toggle');
  $('#save-button-li').attr('class', '');
  $('#save-button').attr('href', '/scenarios/<%= @cloud.scenario.id %>/save');
  update_flash("Modified cloud '<%= @cloud.name %>'.");
<% end %>