$('#cloud-<%= @cloud.id.to_s %>-dropdown').removeClass("open");
<% if @cloud.errors.any? %>
  <% if @cloud.errors[:dependents].any? %>
    alert('<%= @cloud.errors[:dependents][0] %>')
  <% end %>
  <% if @cloud.errors[:running].any? %>
   	alert('<%= @cloud.errors[:running][0] %>')
  <% end %>
<% else %>
  $('#save-button-li').removeClass('disabled');
  $('#cloud-<%= @cloud.id.to_s %>').remove();
  $('#save-button-li').attr('class', '');
  $('#save-button').attr('href', '/scenarios/<%= @cloud.scenario.id %>/save');
  update_flash("Removed cloud '<%= @cloud.name %>' from scenario.");
<% end %>