$('#unboot-button').blur();
<% if @scenario.errors.any? %>
  <% if @scenario.errors[:boot].any? %>
    alert('<%= @scenario.errors[:boot][0] %>')
  <% end %>
<% else %>
	update_status('scenario', '<%= @scenario.status %>');
	$('#boot-button-li').attr('class', "disabled");
  $('#unboot-button-li').attr('class', "disabled");
  update_flash('<%= "Scenario #{@scenario.name} has been placed in the unboot queue" %>');
<% end %>
