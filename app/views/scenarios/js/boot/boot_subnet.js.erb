$("#subnet-<%= @subnet.id %>-dropdown").removeClass("open");
<% if @subnet.errors.any? %>
  <% if @subnet.errors[:boot].any? %>
    alert('<%= @subnet.errors[:boot][0] %>')
  <% end %>
<% else %>
	<% @subnet.scenario.check_status %>
  update_status('scenario', '<%= @subnet.scenario.status %>');
  update_status('subnet-<%= @subnet.id %>', '<%= @subnet.status %>');
  $('#subnet-<%= @subnet.id %>-boot-button-li').attr('class', "disabled");
  $('#subnet-<%= @subnet.id %>-unboot-button-li').attr('class', "disabled");
  $('#subnet-<%= @subnet.id %>-modify-button-li').attr('class', "disabled");
  $('#subnet-<%= @subnet.id %>-delete-button-li').attr('class', "disabled");
  update_flash('<%= "Subnet #{@subnet.name} has been placed in the boot queue" %>');
<% end %>
