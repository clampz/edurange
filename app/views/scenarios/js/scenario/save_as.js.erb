<% if @scenario.errors.any? %>
  <% if @scenario.errors[:name].any? %>
    $('#modal-scenario-save-as').find('#name-div').addClass('has-error');
    $('#modal-scenario-save-as').find('#name-help').text('<%= @scenario.errors[:name][0].html_safe %>');
  <% end %>
  <% if @scenario.errors[:running].any? %>
    $('#modal-scenario-save-as').find('#help-div').addClass('has-error');
    $('#modal-scenario-save-as').find('#help-help').text('<%= @scenario.errors[:running][0] %>');
  <% end %>
<% else %>
  $('#modal-scenario-save-as').modal('toggle');
  $('#scenario-name').text("<%= @scenario.name %>");
  $('#save-button-li').attr('class', 'disabled');
  $('#save-button').attr('href', 'javascript: void(0)');
  update_flash("Scenario has been saved.");
<% end %>