<% if @scenario.errors.any? %>
  <% if @scenario.errors[:name].any? %>
    $('#modal-scenario-custom-new').find('#name-div').addClass('has-error');
    $('#modal-scenario-custom-new').find('#name-help').text('<%= @scenario.errors[:name][0].html_safe %>');
  <% end %>
<% else %>
  window.location = "/scenarios/<%= @scenario.id %>"
<% end %>