%li{ id: "recipes-#{recipe.id}" }
  = recipe.name
  %button.btn.btn-light
    = link_to 'view', recipe_view_scenario_path(@scenario, recipe_id: recipe), remote: true, method: :post
  - if @scenario.modifiable?
    %button.btn.btn-light
      = link_to 'update', recipe_update_view_scenario_path(@scenario, recipe_id: recipe), remote: true, method: :post, id: "recipe-#{recipe.id}-update-button", class: recipe.instances_stopped? ? "" : "hidden"
    %button.btn.btn-light
      = link_to 'remove', recipe_remove_scenario_path(@scenario, recipe_id: recipe), remote: true, method: :post, id: "recipe-#{recipe.id}-remove-button", class: recipe.instances_stopped? ? "" : "hidden"
  %br
  %br
