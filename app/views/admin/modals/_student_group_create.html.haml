#modal-student-group-create.modal.fade{ :tabindex => "-1", :role => "dialog", "aria-labelledby" => "mymodallabel", "aria-hidden" => "true"}
  %div.modal-dialog
    %div.modal-content
      %div.modal-header
        %h3.modal-title.inline#title
          Create Student Group
      %div.modal-body#modalbody
        = form_tag admin_student_group_create_path(@scenario), remote: true, method: :post do 
          %div#name-div
            = label_tag nil, "Name:"
            = text_field_tag "name", nil, class: 'form-control'
            %span.form-text.inline#name-help
            %br  
            = submit_tag "Submit", :class => 'btn btn-primary'
            %button.btn.btn-warning{"data-dismiss" => "modal",}
              Cancel

